/* pages/recommendSong/recommendSong.wxss */
/* 头部 */
.header { 
  position: relative;
  width: 100%;
  height: 300rpx;
}

.header image {
  width: 100%;
  height: 100%;
}

.header .date {
  position: absolute;
    width: 300rpx;
    height: 100rpx;
    left: 50%;
    top: 50%;
    margin-left: -150rpx;
    margin-top: -50rpx;
    /* border: 1rpx solid red; */
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}

.date .day{
  font-size: 38rpx;
}

/* 内容 */
.listScroll {
  /* 100vh 是指视口高度 */
  height: calc(100vh - 385rpx);
}
.listContainer {
  padding: 20rpx;
  position: relative;
  top: -20rpx;
  background: #fff;
  border-radius: 30rpx;
}
.listContainer .listHeader .more{
    float: right;
}

.listItem {
  display: flex;
  height: 80rpx;
  margin-top: 40rpx;
}
.listItem image {
  height: 80rpx;
  width: 80rpx;
  border-radius: 20rpx;
}
.musicInfo {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.listItem .musicInfo text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.iconfont {
  position: absolute;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  text-align: right;
  line-height: 80rpx;
}